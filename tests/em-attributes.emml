<em-eml>
    <em-head>
        <em-attributes>
            <em-section background-color="red" />
            <em-all background-color="orange" />
            <em-class name="redText" color="red" />
            <em-class name="bigText" font-size="32px" />
        </em-attributes>
    </em-head>
    <em-body>

        <em-section>
            <em-text>
                Background set in head attributes
            </em-text>
        </em-section>

        <em-section background-color="green">
            <em-text class="bigText redText">
                Background set inline and text with multiple attribute classes
            </em-text>
        </em-section>

        <em-text>
            Body background set using em-all attribute in head
        </em-text>

    </em-body>
</em-eml>